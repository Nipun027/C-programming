#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    float B, HRA, DA, Gross_Salary ;  // B shows basic salary
    scanf("%f", &B);
    
    
    if (B<=10000)
    {
        HRA = (20.0/100.0) * B;
        DA =  (30.0/100.0)*B;
    }
    else if (B<=20000)
    {
        HRA = (25.0/100.0)*B;
        DA = (40.0/100.0)*B;
    
    }
    else
    {
        HRA = (30.0/100.0)*B;
        DA = (50.0/100.0)*B;
    }
    Gross_Salary = B + HRA + DA ;
    printf("%.2f", Gross_Salary);
    return 0;
}
