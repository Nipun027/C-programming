#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int n;
    scanf("%d", &n);
    int arr[n][n];
    for(int i=0; i<n; i++){
        for(int j=0; j<n; j++){
            scanf("%d", &arr[i][j]);
        }
    }
    long long primary_sum = 0 ; 
    long long secondary_sum = 0;
    
    for(int i=0; i<n; i++){
        primary_sum += arr[i][i];
        
    
    //for(int i=0; i<n; i++){
        secondary_sum += arr[i][n - i - 1];
    }
    long long total_sum = primary_sum + secondary_sum;
    //total_sum += arr[i][i];
    if(n %2 == 1){
        total_sum -= arr[n/2][n/2];
    
    }
    printf("Sum of Primary Diagonal: %lld\n", primary_sum);
    printf("Sum of Secondary Diagonal: %lld\n", secondary_sum);
    printf("Total Sum of Both Diagonals: %lld\n", total_sum);
    
        
    return 0;
}
