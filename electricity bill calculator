#include <stdio.h>

int main() {
    float U, bill_amount = 0.0;
    scanf("%f", &U);

    if (U <= 50)
        bill_amount = U * 0.50;
    else if (U <= 150)
        bill_amount = 50 * 0.50 + (U - 50) * 0.75;
    else if (U <= 250)
        bill_amount = 50 * 0.50 + 100 * 0.75 + (U - 150) * 1.20;
    else
        bill_amount = 50 * 0.50 + 100 * 0.75 + 100 * 1.20 + (U - 250) * 1.50;

    bill_amount += bill_amount * 20.0/100.0;  

    printf("%.2f", bill_amount);
    return 0;
}
